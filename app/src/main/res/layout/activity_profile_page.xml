<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaldeep.geochat.ProfilePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/NameTextProfilePage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#1155cc"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/NameProfilePage"
        android:layout_below="@+id/NameTextProfilePage"
        android:layout_alignLeft="@+id/NameTextProfilePage"
        android:layout_alignStart="@+id/NameTextProfilePage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age"
        android:id="@+id/AgeTextProfilePage"
        android:layout_below="@+id/NameProfilePage"
        android:layout_alignLeft="@+id/NameProfilePage"
        android:layout_alignStart="@+id/NameProfilePage"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#1155cc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/AgeProfilePage"
        android:layout_below="@+id/AgeTextProfilePage"
        android:layout_alignLeft="@+id/AgeTextProfilePage"
        android:layout_alignStart="@+id/AgeTextProfilePage"
        android:layout_alignRight="@+id/AgeTextProfilePage"
        android:layout_alignEnd="@+id/AgeTextProfilePage"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/DescriptionTextProfilePage"
        android:layout_below="@+id/AgeProfilePage"
        android:layout_alignLeft="@+id/AgeProfilePage"
        android:layout_alignStart="@+id/AgeProfilePage"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:textColor="#1155cc"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DescriptionProfilePage"
        android:layout_below="@+id/DescriptionTextProfilePage"
        android:layout_alignLeft="@+id/DescriptionTextProfilePage"
        android:layout_alignStart="@+id/DescriptionTextProfilePage"
        android:layout_alignRight="@+id/NameProfilePage"
        android:layout_alignEnd="@+id/NameProfilePage"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="fill_horizontal|top" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/ConfirmButtonProfilePage"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/DescriptionProfilePage"
        android:layout_alignEnd="@+id/DescriptionProfilePage"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
