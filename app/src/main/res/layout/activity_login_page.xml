<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaldeep.geochat.LoginPage">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/GeoChatLogoLoginPage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/geochat_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/UserNameLoginPage"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:hint="Username"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/GeoChatLogoLoginPage"
        android:layout_alignLeft="@+id/GeoChatLogoLoginPage"
        android:layout_alignStart="@+id/GeoChatLogoLoginPage"
        android:layout_alignRight="@+id/GeoChatLogoLoginPage"
        android:layout_alignEnd="@+id/GeoChatLogoLoginPage"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/PasswordLoginPage"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:hint="Password"
        android:password="true"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/UserNameLoginPage"
        android:layout_alignLeft="@+id/UserNameLoginPage"
        android:layout_alignStart="@+id/UserNameLoginPage"
        android:layout_alignRight="@+id/UserNameLoginPage"
        android:layout_alignEnd="@+id/UserNameLoginPage"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/LoginButtonLoginPage"
        android:layout_below="@+id/PasswordLoginPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Register Here"
        android:id="@+id/RegisterHereTextLoginPage"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/LoginButtonLoginPage"
        android:layout_alignLeft="@+id/PasswordLoginPage"
        android:layout_alignStart="@+id/PasswordLoginPage"
        android:layout_alignRight="@+id/PasswordLoginPage"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot Password"
        android:id="@+id/ForgotPasswordTextLoginPage"
        android:textAlignment="center"
        android:layout_alignRight="@+id/PasswordLoginPage"
        android:layout_alignEnd="@+id/PasswordLoginPage"
        android:layout_marginLeft="25dp"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/LoginButtonLoginPage"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/ErrorMessageLoginPage"
        android:layout_below="@+id/PasswordLoginPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#ee1d1d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterHereButtonLoginPage"
        android:layout_alignTop="@+id/RegisterHereTextLoginPage"
        android:layout_alignLeft="@+id/RegisterHereTextLoginPage"
        android:layout_alignStart="@+id/RegisterHereTextLoginPage"
        android:layout_alignRight="@+id/RegisterHereTextLoginPage"
        android:layout_alignEnd="@+id/RegisterHereTextLoginPage"
        android:layout_alignBottom="@+id/RegisterHereTextLoginPage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ForgotPasswordButtonLoginPage"
        android:layout_alignTop="@+id/ForgotPasswordTextLoginPage"
        android:layout_alignLeft="@+id/ForgotPasswordTextLoginPage"
        android:layout_alignStart="@+id/ForgotPasswordTextLoginPage"
        android:layout_alignRight="@+id/ForgotPasswordTextLoginPage"
        android:layout_alignEnd="@+id/ForgotPasswordTextLoginPage"
        android:layout_alignBottom="@+id/ForgotPasswordTextLoginPage" />

</RelativeLayout>
