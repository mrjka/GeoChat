<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_element">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:id="@+id/UserPhotoListElement"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Jaldeep Acharya"
        android:id="@+id/NameListElement"
        android:layout_alignTop="@+id/UserPhotoListElement"
        android:layout_toRightOf="@+id/UserPhotoListElement"
        android:layout_toEndOf="@+id/UserPhotoListElement"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textIsSelectable="false"
        android:textColor="#1155cc"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: 20"
        android:id="@+id/AgeListElement"
        android:textSize="15sp"
        android:layout_below="@+id/NameListElement"
        android:layout_alignLeft="@+id/NameListElement"
        android:layout_alignStart="@+id/NameListElement"
        android:layout_marginTop="15dp"
        android:textColor="#1155cc"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/ChatButtonListElement"
        android:layout_alignTop="@+id/NameListElement"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/chat_icon" />
</RelativeLayout>