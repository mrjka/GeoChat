<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaldeep.geochat.RegisterUser">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/UserNameTextRegisterUser"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="35sp"
        android:textColor="#1155cc"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/UserNameRegisterUser"
        android:layout_below="@+id/UserNameTextRegisterUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="25sp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/PasswordTextRegisterUser"
        android:textSize="35sp"
        android:layout_below="@+id/UserNameRegisterUser"
        android:layout_alignLeft="@+id/UserNameRegisterUser"
        android:layout_alignStart="@+id/UserNameRegisterUser"
        android:layout_marginTop="30dp"
        android:textColor="#1155cc"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordRegisterUser"
        android:layout_below="@+id/PasswordTextRegisterUser"
        android:layout_alignLeft="@+id/PasswordTextRegisterUser"
        android:layout_alignStart="@+id/PasswordTextRegisterUser"
        android:layout_alignRight="@+id/UserNameRegisterUser"
        android:layout_alignEnd="@+id/UserNameRegisterUser"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:password="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="25sp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/EmailTextRegisterUser"
        android:textSize="35sp"
        android:layout_below="@+id/PasswordRegisterUser"
        android:layout_alignLeft="@+id/PasswordRegisterUser"
        android:layout_alignStart="@+id/PasswordRegisterUser"
        android:layout_marginTop="30dp"
        android:textColor="#1155cc"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailRegisterUser"
        android:layout_below="@+id/EmailTextRegisterUser"
        android:layout_alignLeft="@+id/EmailTextRegisterUser"
        android:layout_alignStart="@+id/EmailTextRegisterUser"
        android:layout_alignRight="@+id/PasswordRegisterUser"
        android:layout_alignEnd="@+id/PasswordRegisterUser"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="25sp"
        android:gravity="center_vertical" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Register"
        android:id="@+id/RegisterButtonRegisterUser"
        android:layout_below="@+id/EmailRegisterUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_corners_and_blue_background"
        android:textStyle="bold" />

</RelativeLayout>
